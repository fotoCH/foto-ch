{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext.asynciterable"],
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./knexfile.ts"
  ]
}
